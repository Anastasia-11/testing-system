@model CourseWork.ViewModels.LoginViewModel

<h2>Вход в аккаунт</h2>
<form class="row g-3" method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="col-12">
        <label class="form-label" asp-for="Email"></label><br />
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="col-12">
        <label class="form-label" asp-for="Password"></label><br />
        <input class="form-control" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="col-12">
        <div class="form-check">
            <label class="form-check-label" asp-for="RememberMe">Запомнить?</label>
            <input class="form-check-input" asp-for="RememberMe"/>
        </div>
    </div>
    <div>
        <input class="btn btn-outline-dark" type="submit" value="Войти" />
    </div>
</form> 