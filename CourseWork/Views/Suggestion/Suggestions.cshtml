@model System.Linq.IQueryable<CourseWork.Models.Suggestion>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html lang="ru">
<head>
    <title>Просмотр предложений</title>
</head>
<body>
<div>
      @if (!Model.Any())
      {
          <li class="list-group-item">Предложений нет</li>
      }
      else
      {
          <table class="table">
              <thead>
                  <tr>
                      <th scope="col">№</th>
                      <th scope="col">Тема</th>
                      <th scope="col">Дата добавления</th>
                      <th scope="col">Информация</th>
                      <th scope="col"></th>
                  </tr>
              </thead>
              <tbody>
              @{var counter = 0;    
                  foreach (var suggestion in Model)
                  {
                      counter++;
                      <tr>
                          <th scope="row">@counter</th>
                          <td>@suggestion.Theme</td>
                          <td>@suggestion.CreationDate</td>
                          <td>
                              <a class="btn btn-sm btn-outline-primary" asp-route-suggestionId="@suggestion.Id" asp-controller="Suggestion" asp-action="SuggestionInfo">Подробнее</a>
                          </td>
                          <td>
                              <a class="btn btn-sm btn-outline-danger" asp-route-suggestionId="@suggestion.Id" asp-controller="Suggestion" asp-action="DeleteSuggestion">Удалить</a>
                          </td>
                      </tr>
                  }
              }
              </tbody>
          </table>
      }
</div>
</body>
</html>